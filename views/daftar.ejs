<%- include('./components/_header.ejs') %>  
<div class="w-screen h-screen bg-cover flex items-center justify-center" style="background-image: url('/img/cover.JPEG'); background-position: 35%;">
    <div class="bg-green1 bg-opacity-90 mt-52 rounded-sm shadow-2xl" style="width: 30rem; min-height: max-content; box-shadow: 0 0 5px rgb(0, 76, 76);">
    <div class="px-7 py-5 tracking-wider text-green5">
        <h1 class="text-4xl font-bold" id="masuk_daftar">Masuk</h1>
        <div class="mt-4">
            <form action="" method="POST" class="flex flex-col font-semibold text-lg tracking-wide" id="masuk">
                <label for="Username" class="">Nama Pengguna</label>
                <input type="text" id="Username" name="Username" class="bg-green2 rounded-sm px-3 py-2 appearance-none focus:outline-none focus:ring-2">
                <label for="Password" class="mt-2">Password</label>
                <input type="password" id="Password" name="Password" class="bg-green2 rounded-sm px-3 py-2 appearance-none focus:outline-none focus:ring-2">
                <div class="flex justify-between w-full mt-7 items-center">
                    <h2 class="text-md font-light italic">Belum punya akun? <a onclick="Daftar()" class="underline cursor-pointer">Daftar</a></h2>
                    <input type="submit" value="Masuk" class="px-10 py-2 rounded-md  bg-green2 font-bold tracking-wider cursor-pointer hover:bg-green3">
                </div>
            </form>
            <form action="authentication/signup" method="POST" class="flex flex-col font-semibold text-lg tracking-wide hidden" id="daftar">
                <label for="Nama" class="">Nama</label>
                <input type="text" name="Name"  id="Nama" class="bg-green2 rounded-sm px-3 py-2 appearance-none focus:outline-none focus:ring-2">
                <label for="Username" class="mt-2">Nama Pengguna</label>
                <input type="text" name="Username" id="Username" class="bg-green2 rounded-sm px-3 py-2 appearance-none focus:outline-none focus:ring-2">
                <label for="Email" class="mt-2">E-Mail</label>
                <input type="email" id="Email" name="Email" class="bg-green2 rounded-sm px-3 py-2 appearance-none focus:outline-none focus:ring-2">
                <label for="Password" class="mt-2">Password</label>
                <input type="password" id="Password" name="Password" class="bg-green2 rounded-sm px-3 py-2 appearance-none focus:outline-none focus:ring-2">
                <div class="flex justify-between w-full mt-7 items-center">
                    <h2 class="text-md font-light italic">Sudah punya akun? <a onclick="Masuk()" class="underline cursor-pointer">Masuk</a></h2>
                    <input type="submit" value="Daftar" class="px-10 py-2 rounded-md  bg-green2 font-bold tracking-wider cursor-pointer hover:bg-green3">
                </div>
            </form>
        </div>
    </div>
    </div>
</div>
<script>
    let masuk_daftar = document.querySelector("#masuk_daftar")
    let masuk = document.querySelector('#masuk')
    let daftar = document.querySelector('#daftar')
    function Masuk(){
        masuk_daftar.innerHTML = "Masuk"
        daftar.classList.add('hidden')
        masuk.classList.remove('hidden')
    }
    function Daftar () {
        masuk_daftar.innerHTML = "Daftar"
        daftar.classList.remove('hidden')
        masuk.classList.add('hidden')
        
    }
</script>

